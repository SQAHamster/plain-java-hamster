<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.unistuttgart.iste.rss.oo.hamstersimulator.ui.javafx.GameSceneController">
   <top>
      <ToolBar fx:id="toolbar" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="play" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#startGame">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Play24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pause" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#pauseGame" text="Button">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Pause24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Separator orientation="VERTICAL" />
            <Button fx:id="undo" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#undo" text="Button">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Undo24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="redo" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#redo" text="Button">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Redo24.gif" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Separator maxWidth="30.0" orientation="VERTICAL" prefWidth="30.0" />
            <Slider fx:id="speed" />
        </items>
      </ToolBar>
   </top>
   <center>
      <SplitPane fx:id="splitPane" dividerPositions="0.5" BorderPane.alignment="CENTER">
         <items>
         	<StackPane fx:id="hamsterPane" alignment="CENTER" styleClass="game-grid">
            	<HamsterTerritoryGrid fx:id="hamsterGrid" />
            </StackPane>
            <ListView prefHeight="200.0" prefWidth="200.0" />
         </items>
      </SplitPane>
   </center>
</BorderPane>
